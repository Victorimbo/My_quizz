                            <input type="hidden" name="response" value="{{ y.id }}">
                            <input type="hidden" name="score" value="{{ score }}">
                            <input type="submit" value="{{ y.reponse }}">
                        </form>
            {% endfor %}
        {% endfor %}
{% endblock %}