{% block Questions %}
    <h2>Answer the questions</h2>
        {% for x in questionPage %}
    <p>Score :{{ score }}</p>
    <p>{{ x.question }}</p>
                {% for y in response %}
                        <form action="/quizz/{{ id }}" method="post">
